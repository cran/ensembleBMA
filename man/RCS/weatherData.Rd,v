text
@\name{weatherData}
\alias{weatherData}
\alias{precipitationData}
\alias{temperatureData}
\alias{pressureData}
\alias{ensembleSize.weatherData}
\alias{forecasts.weatherData}
\alias{observations.weatherData}
\alias{dates.weatherData}
\title{
  Creates a weatherData object.
}
\description{
   Creates a \code{weatherData} object. 
}
\usage{
weatherData( forecasts, observations, dates)
}
\arguments{
  \item{forecasts}{
     A matrix with columns correspond to forecasts from individual members 
     of an ensemble.
  }
  \item{observations}{
    Vector of observed weather conditions.
  }
  \item{dates}{
    Vector of dates corresponding to the forecasts and observations.
    This must be in integer or ordered factor form. 
   }
}
\value{
   A \code{weatherData} object, incorporating forecasts and observations
   with the associated dates.
}
\details{
    Methods for \code{weatherData} objects include \code{ensembleSize},
    \code{forecasts}, \code{observations}, and \code{dates}. \\
    Subsetting is possible, but in the case of columns it only refers
    to the forecasts.
}

\seealso{
  \code{\link{ensembleBMA}}, 
  \code{\link{ensembleBMAgamma0}}, 
  \code{\link{ensembleBMAnormals}}
}
\examples{
  precipData <- weatherData( forecasts = precipData[,1:9],
                             observations = precipData[, 10],
                             dates = precipData[, 11])
}
\keyword{BMA}
% docclass is function
